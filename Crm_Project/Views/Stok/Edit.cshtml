                                @Html.ValidationMessageFor(model => model.Model)
                                <span class="help-block">Örnek:15568x</span>
                            </div>
                            <div class="form-group form-md-line-input">
                                @Html.EditorFor(model => model.StokGrupParent, new { htmlAttributes = new { @type = "text", @class = "form-control", @id = "form_control_1", @placeholder = "Ana Grup" } })
                                @Html.ValidationMessageFor(model => model.StokGrupParent)
                                <span class="help-block">Örnek: 15568x</span>
                            </div>
                            <div class="form-group form-md-line-input">
                                @Html.EditorFor(model => model.StokGrup, new { htmlAttributes = new { @type = "text", @class = "form-control", @id = "form_control_1", @placeholder = "Grup" } })
