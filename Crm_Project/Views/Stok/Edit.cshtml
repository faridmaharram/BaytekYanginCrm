@model StokKartlar
@{
    ViewBag.Title = "Index";
    var userid = WebSecurity.CurrentUserId;
}
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <span>Stok Kartlar</span>
        </li>
    </ul>
</div>
<div class="container-fluid">
    <h1 class="page-title">
        Stok Kartlar
        <small>Burada stok kartınızı oluştura bilirsiniz...</small>
    </h1>
    <div class="row">
        <div class="col-md-8 ">
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-red-sunglo">
                        <i class="icon-settings font-red-sunglo"></i>
                        <a href="@Url.Action("Edit","Stok")"> <span class="caption-subject bold uppercase"> Stok Kart Oluştur</span> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form action="@Url.Action("Edit","Stok")" method="post" role="form" enctype="multipart/form-data">
                        <div class="form-body">
                            <div class="form-group form-md-line-input">
                                @Html.EditorFor(model => model.StokKodu, new { htmlAttributes = new { @type = "text", @class = "form-control", @id = "form_control_1", @placeholder = "Stok kodu" } })
                                @Html.ValidationMessageFor(model => model.StokKodu)
                                <span class="help-block">Örnek:15568x</span>
                            </div>
                            <div class="form-group form-md-line-input">
                                @Html.EditorFor(model => model.StokAdi, new { htmlAttributes = new { @type = "text", @class = "form-control", @id = "form_control_1", @placeholder = "Stok Adı" } })
