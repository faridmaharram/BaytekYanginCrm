                                @Html.ValidationMessageFor(model => model.KDV)
                                <span class="help-block">Örnek:15568</span>
                            </div>
                            <div class="form-group form-md-line-input">
                                @Html.EditorFor(model => model.Marka, new { htmlAttributes = new { @type = "text", @class = "form-control", @id = "form_control_1", @placeholder = "Marka" } })
