                                <span class="help-block">Örnek:15568</span>
                            </div>
                            <div class="form-group form-md-line-input">
                                @Html.EditorFor(model => model.AlisFiyat, new { htmlAttributes = new { @type = "text", @class = "form-control", @id = "form_control_1", @placeholder = "Alış Fiyatı" } })
                                @Html.ValidationMessageFor(model => model.AlisFiyat)
                                <span class="help-block">Örnek:15568</span>
                            </div>

                            <div class="form-group form-md-line-input">
